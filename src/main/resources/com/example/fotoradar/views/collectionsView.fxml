<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<?import com.example.fotoradar.components.CollectionsComponent?>

<?import java.net.URL?>
<AnchorPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.fotoradar.views.CollectionsView">
    <stylesheets>
        <URL value="@../styles/globalStyles.css" />
        <!-- tu będą dodawane szczeŋółowe style dla danego widoku -->
    </stylesheets>

    <Label layoutX="48.0" layoutY="24.0" text="kolekcje">
        <font>
            <Font size="30.0" />
        </font>
    </Label>
    <CollectionsComponent fx:id="collectionsComponent" layoutX="24.0" layoutY="84.0" />
    <Button  mnemonicParsing="false" onAction="#addCollection"
             AnchorPane.bottomAnchor="48.0"
             AnchorPane.rightAnchor="48.0"
             prefHeight="24.0" prefWidth="200.0" text="DODAJ KOLEKCJĘ" />
    <Button  mnemonicParsing="false" onAction="#openSettings"
             AnchorPane.topAnchor="48.0"
             AnchorPane.rightAnchor="48.0"
             prefHeight="24.0" prefWidth="200.0" text="USTAWIENIA" />
</AnchorPane>
